<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:padding="6dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abhishek Aryan"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/student_layout_name"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/student_layout_name"
        android:text="send2abhishek@live.com"
        android:layout_alignLeft="@id/student_layout_name"
        android:id="@+id/student_layout_email"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/student_layout_addr"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/student_layout_name"
        android:layout_marginRight="12dp"
        android:text="Bangalore"/>

</RelativeLayout>